{
  // More info: https://aka.ms/tsconfig
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "es6",
    "lib": ["es2020"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
